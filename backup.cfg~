
# Directory that needs to be backed up must be a full path (without trailing slash)
FILES_DIR="/my/folder/to/backup"

# Directory that will store backups (without trailing slash)
BACKUP_DIR="/my/folder/to/store/backups"

# Db host
DB_HOST="localhost"

# Db user
DB_USER="root"

# Db password
DB_PASSWORD="123456"

# Db name
DB_NAME="my_db"

# Number of daily backups to store
DAILY_BACKUP_NUMBER=7

# Number of weekly backups to store
WEEKLY_BACKUP_NUMBER=5

# Number of monthly backups to store
MONTHLY_BACKUP_NUMBER=6
